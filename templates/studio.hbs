<section class="register hide">
	<form class="registration-form validate" action="//tumblr.us9.list-manage.com/subscribe/post?u=234271003ab4a59e156c0c667&amp;id=44f129f97a" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank" novalidate>
		<fieldset id="mc_embed_signup_scroll">
			<legend><h1>Studio: Register</h1></legend>

			<p>
				<label for="name">Name:</label><br>
				<input type="text" name="FNAME" id="name">
			</p>

			<p>
				<label for="surname">Surame:</label><br>
				<input type="text" name="LNAME" id="surname">
			</p>

			<p class="radio-buttons">
				<label for="role-1" id="student-graduate">
					<input type="checkbox" name="group[28125][1]" id="role-1" value="1">Student/Graduate
				</label>

				<label for="role-2" id="industry-academia">
					<input type="checkbox" name="group[28125][2]" id="role-2" value="2">Industry/Academia
				</label>
			</p>

			<p>
				<label for="college">College/Organisation</label><br>
				<input type="text" name="MMERGE3" id="college">
			</p>

			<p>
				<label for="email">Email:</label><br>
				<input type="email" name="EMAIL" id="email">
			</p>

			<!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
			<div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_234271003ab4a59e156c0c667_44f129f97a" tabindex="-1" value=""></div>

			<input type="submit" name="subscribe" value="Register Your Interest">
		</fieldset>
	</form>
</section>

